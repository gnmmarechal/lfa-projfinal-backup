	//Fazer zoom de uma imagem
	{
	img = open "/Images/ball.png";
	imgage = img zoom;
	show image;
	}
	

	//Fazer o contorno
	{
	img = open "ball.png";
	image = img contour;
	show image;
	}


	//Aumentar/Diminuir o Contraste e o Brilho
	{
	img = open "/Images/Paisagens/serra.png";
	image = img brightness 100; 						//Na posição do 100 será o valor do brilho
	image1= image contrast 100; 						//Na posição do 100 será o valor do contraste
	//Pode ser possivel também fazer só brilho ou só contraste 
	show image1; 
	}


	// Aumentar/ Diminuir o contraste 
	{
	img = open "/Images/Portugal/Paisagens/serra.png"; 
	image = img saturation 100; // Na posição do 100 será o valor do contrate "S" em HSV
	show image;
	}


	//Fazer zoom in/out de uma imagem
	{
	img = open "ball.png";
	image = img zoom 50; // tamanho da imgem final
	show image;
	}


	// Fazer crop de uma imagem 
	{
	img = open "ball.png";
	image = img crop 50 50; // parte da imagem que vai ser extraída (c,l)
	show image;
	}

	
	//Colocar uma imagem a gray
	{
	img = open "ball.png";
	image = img gray; // colocar a imagem a gray
	show image;
	}

	//Fazer rotação de uma imagem
	{
	img = open "ball.png";
	image =  img rotate 180 // o utilizador vai fazer a rotação de uma imagem ??graus
	show image ;
	}

	//Extração de uma ou mais caras
	{
	img = open "ball.png";
	image = img extract; // o utilizador vai fazer a rotação de uma imagem ??graus
	show image;
	}

	// Obter a diferença de duas ou mais imagens
	{
	img = open "ball.png";
	img1 = open "/Images/ball.png";
	image = img-img1 diference; // o utilizador vai encontrar as diferenças entre duas ou mais imagens
	show image;
	}

	//Pode ser possivel fazer várias transformações numa só "função"
	//i.e: Colocar uma imagem a gray, depois fazer um crop e um zoom

